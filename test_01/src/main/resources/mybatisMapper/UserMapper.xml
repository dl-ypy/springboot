<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 面向Mapper接口编程,mybatis会通过绑定自动寻找对应方法的映射SQL实现接口 -->
<mapper namespace="com.bonc.test.mapper.UserMapper">
	<select id="query" resultType="java.util.HashMap">
		select * from t_user
	</select> 
	
	<select id="queryById" resultType="java.util.HashMap">
		select * from t_user where userid=#{userid}
	</select>
	
	<insert id="add" parameterType="com.bonc.test.mapper.UserMapper">
		insert into t_user (username,password) values (#{username},#{password})	
	</insert>
	
	<delete id="deleteById" parameterType="Integer">
		delete from t_user where userid = #{userid}		
	</delete>
	
	<update id="updateById" parameterType="com.bonc.test.mapper.UserMapper">
		update t_user set username=#{username},password=#{password} where userid = #{userid}		
	</update>
</mapper>